// =====================================
// TavernAI Plus 设计系统变量
// 基于前端设计规范 v1.0
// =====================================

// 主色调 - 神秘紫色系
$primary-50: #F3F0FF;
$primary-100: #E9E2FF;
$primary-200: #D6C7FF;
$primary-300: #BBA3FF;
$primary-400: #A78BFA;
$primary-500: #8B5CF6;    // 主紫色
$primary-600: #7C3AED;
$primary-700: #6B21A8;
$primary-800: #581C87;
$primary-900: #4C1D95;

// 向后兼容的别名
$primary-color: $primary-500;
$primary-light: $primary-400;
$primary-dark: $primary-600;

// 辅助色 - 温暖金色系
$secondary-50: #FFFBEB;
$secondary-100: #FEF3C7;
$secondary-200: #FDE68A;
$secondary-300: #FCD34D;
$secondary-400: #FBBF24;
$secondary-500: #F59E0B;   // 主金色
$secondary-600: #D97706;
$secondary-700: #B45309;
$secondary-800: #92400E;
$secondary-900: #78350F;

// 向后兼容的别名
$secondary-color: $secondary-500;
$secondary-light: $secondary-300;
$secondary-dark: $secondary-600;

// 中性色系 - 深空灰
$gray-50: #F9FAFB;
$gray-100: #F3F4F6;
$gray-200: #E5E7EB;
$gray-300: #D1D5DB;
$gray-400: #9CA3AF;
$gray-500: #6B7280;
$gray-600: #4B5563;
$gray-700: #374151;
$gray-800: #1F2937;
$gray-900: #111827;

// 深色主题背景色系
$dark-bg-primary: #0F0F23;     // 主背景 - 深紫蓝
$dark-bg-secondary: #1E1E3F;   // 次要背景 - 中紫蓝
$dark-bg-tertiary: #2D2D5A;    // 第三背景 - 浅紫蓝
$dark-bg-card: #252544;        // 卡片背景 - 暖紫灰

// 向后兼容的别名
$bg-primary: $dark-bg-primary;
$bg-secondary: $dark-bg-secondary;
$bg-tertiary: $dark-bg-tertiary;
$bg-card: $dark-bg-card;

// 文字色系 (深色主题)
$text-primary: $gray-50;      // 主要文字 - 最亮
$text-secondary: $gray-300;   // 次要文字 - 中亮
$text-tertiary: $gray-400;    // 第三文字 - 中等
$text-muted: $gray-500;       // 占位符文字 - 暗淡

// 功能色系
$success-color: #10B981;
$warning-color: #F59E0B;
$error-color: #EF4444;
$info-color: #3B82F6;

// 字体家族
$font-family-base: 'Inter', 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
$font-family-mono: 'JetBrains Mono', 'SF Mono', Monaco, 'Cascadia Code', monospace;
$font-family-serif: 'Crimson Pro', Georgia, serif;

// 字体大小系统
$font-size-xs: 0.75rem;
$font-size-sm: 0.875rem;
$font-size-base: 1rem;
$font-size-lg: 1.125rem;
$font-size-xl: 1.25rem;
$font-size-2xl: 1.5rem;
$font-size-3xl: 1.875rem;
$font-size-4xl: 2.25rem;

// 行高系统
$line-height-tight: 1.25;
$line-height-normal: 1.5;
$line-height-relaxed: 1.75;

// 字重系统
$font-weight-light: 300;
$font-weight-normal: 400;
$font-weight-medium: 500;
$font-weight-semibold: 600;
$font-weight-bold: 700;

// 基础间距单位（8px 系统）
$spacing-0: 0;
$spacing-1: 0.25rem;
$spacing-2: 0.5rem;
$spacing-3: 0.75rem;
$spacing-4: 1rem;
$spacing-5: 1.25rem;
$spacing-6: 1.5rem;
$spacing-8: 2rem;
$spacing-10: 2.5rem;
$spacing-12: 3rem;
$spacing-16: 4rem;
$spacing-20: 5rem;

// 组件间距
$component-gap: $spacing-4;
$section-gap: $spacing-8;
$page-padding: $spacing-6;
$container-max-width: 1200px;

// 圆角系统
$border-radius-sm: 0.25rem;
$border-radius-base: 0.5rem;
$border-radius-lg: 0.75rem;
$border-radius-xl: 1rem;
$border-radius-full: 9999px;

// 阴影系统
$shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.5);
$shadow-base: 0 4px 6px -1px rgba(0, 0, 0, 0.4), 0 2px 4px -1px rgba(0, 0, 0, 0.3);
$shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.4), 0 4px 6px -2px rgba(0, 0, 0, 0.3);
$shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.4), 0 10px 10px -5px rgba(0, 0, 0, 0.2);

// 特殊效果
$glow-primary: 0 0 20px rgba(139, 92, 246, 0.3);
$glow-secondary: 0 0 20px rgba(245, 158, 11, 0.3);

// 过渡动画
$transition-fast: 150ms ease-in-out;
$transition-base: 250ms ease-in-out;
$transition-slow: 350ms ease-in-out;

// =====================================
// 响应式断点系统 (移动端优先)
// =====================================
$breakpoint-xs: 475px;    // 超小屏手机 (iPhone SE)
$breakpoint-sm: 640px;    // 小屏手机 (iPhone 12)
$breakpoint-md: 768px;    // 平板竖屏 (iPad)
$breakpoint-lg: 1024px;   // 平板横屏/小笔记本
$breakpoint-xl: 1280px;   // 桌面端
$breakpoint-2xl: 1536px;  // 大屏桌面

// 容器最大宽度
$container-sm: 640px;
$container-md: 768px;
$container-lg: 1024px;
$container-xl: 1280px;
$container-2xl: 1536px;
$container-max: 1200px;   // 主要内容区最大宽度
