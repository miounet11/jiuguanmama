{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["../../packages/shared/*"],
      "@database/*": ["../../packages/database/*"],
      "@streaming/*": ["src/services/streaming/*"],
      "@extensions/*": ["src/services/extensions/*"],
      "@cache/*": ["src/services/cache/*"],
      "@config/*": ["src/services/config/*"]
    },
    "types": ["node", "express", "jest"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Strict checks for new code - gradual migration for existing */
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
