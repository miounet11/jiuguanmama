{
  "name": "tavernai-plus",
  "version": "0.1.0",
  "description": "Next-generation AI role-playing platform based on SillyTavern",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "install:all": "./install.sh",
    "start:all": "./start.sh",
    "db:init": "cd apps/api && npx prisma migrate dev && npx prisma generate",
    "db:migrate": "cd apps/api && npx prisma migrate dev",
    "db:generate": "cd apps/api && npx prisma generate",
    "db:studio": "cd apps/api && npx prisma studio",
    "db:seed": "cd apps/api && npx ts-node src/seed.ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@9.8.1",
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/multer": "^2.0.0",
    "colors": "^1.4.0",
    "date-fns": "^4.1.0",
    "js-yaml": "^4.1.0",
    "multer": "^2.0.2"
  }
}
